<div class='chat-room-form__field'>
  <div class='chat-room-form__field--left'>
    <label class='chat-room-form__label'>グループメンバー</label>
  </div>
  <div class='chat-room-form__field--right'>
    <% @room.users.each do |user| %>
      <div><%= user.name %></div>
    <% end %>
  </div>
</div>
<%=form_with model: [@room, @candidate], local: true do |f|%>
  <div class='chat-room-form__field'>
    <div class='chat-room-form__field--left'>
      <%= f.label :title, :タイトル, class: 'chat-room-form__label'%>
    </div>
    <div class='chat-room-form__field--right'>
      <%= f.text_field :title, class: 'chat__room_name chat-room-form__input', placeholder: 'スケジュール内容を入力してください'%>
    </div>
  </div>
  <div class='chat-room-form__field'>
    <div class='chat-room-form__field--left'>
      <%= f.label :body, :スケジュールの詳細, class: 'chat-room-form__label'%>
    </div>
    <div class='chat-room-form__field--right'>
      <%= f.text_field :body, class: 'chat__room_name chat-room-form__input', placeholder: 'スケジュールの詳細を入力してください'%>
    </div>
  </div>
  <% 5.times do |i| %>
    <div class='chat-room-form__field'>
      <div><%= "候補#{i + 1}" %></div>
      <div class='chat-room-form__field--left'>
        <%= f.label "start_time_#{i}", :開始, class: 'chat-room-form__label'%>
      </div>
      <div class='chat-room-form__field--right'>
        <%= f.datetime_field "candidates_attributes[#{i}][start_time]", class: 'chat__room_name chat-room-form__input', placeholder: '開始時刻を選択してください'%>
      </div>
    </div>
    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'>
        <%= f.label "end_time_#{i}", :終了, class: 'chat-room-form__label'%>
      </div>
      <div class='chat-room-form__field--right'>
        <%= f.datetime_field "candidates_attributes[#{i}][end_time]", class: 'chat__room_name chat-room-form__input', placeholder: '終了時刻を選択してください'%>
      </div>
    </div>
  <% end %>
  <div class='chat-room-form__field'>
    <div class='chat-room-form__field--left'></div>
    <div class='chat-room-form__field--right'>
      <%= f.submit "候補を登録", class: 'chat-room-form__action-btn'%>
    </div>
  </div>
<% end %>